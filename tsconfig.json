{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": [
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "contracts/**/*.ts",
    "wrappers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts/test.ts"
  ]
}